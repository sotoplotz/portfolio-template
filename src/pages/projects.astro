---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<BaseLayout>
  <section id="projects">
    <h1>Projects & Case Studies</h1>

    <ProjectCard
      title="Mobile App Redesign"
      type="Mobile App"
      description="Redesigned the onboarding flow to improve usability and reduce drop-offs."
      image="/images/mobile-app.png"
      link="#"
    />

    <ProjectCard
      title="Web Dashboard"
      type="Web App"
      description="Created a web dashboard with improved data visualization and accessibility."
      image="/images/web-dashboard.png"
      link="#"
    />

    <ProjectCard
      title="UX Research Project"
      type="UX/UI"
      description="Conducted user interviews and testing to inform design decisions."
      image="/images/ux-research.png"
      link="#"
    />
  </section>
</BaseLayout>
