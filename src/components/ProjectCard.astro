---
const { title, type, description, image, link } = Astro.props;
---

<article class="project-card">
  <img src={image} alt={`Screenshot of ${title}`} />
  <h3>{title}</h3>
  <p><strong>Type:</strong> {type}</p>
  <p>{description}</p>
  {link && <a href={link} target="_blank" rel="noopener">View Project</a>}
</article>
